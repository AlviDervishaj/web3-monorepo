{
  "name": "@shungerfund/contracts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "build": "pnpm clean && pnpm compile && pnpm gen:types && pnpm export:abi",
    "gen:types": "typechain --target ethers-v6 --out-dir typechain \"artifacts/contracts/**/*.json\"",
    "export:abi": "tsx scripts/export-abi.ts",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "hardhat:node": "hardhat node",
    "deploy": "tsx scripts/deploy.ts",
    "check": "tsx scripts/check-deployment.ts"
  },
  "files": ["abis", "artifacts", "contracts", "scripts", "typechain"],
  "exports": {
    "./abis/*": "./abis/*",
    "./typechain/*": "./typechain/*"
  },
  "dependencies": {
    "ethers": "^6.15.0",
    "viem": "^2.39.3"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.0",
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@types/node": "^22.19.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.15",
    "tsx": "^4.20.6",
    "typechain": "^8.3.2",
    "typescript": "~5.8.3"
  }
}

