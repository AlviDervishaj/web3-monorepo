#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules/hardhat/dist/src/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules/hardhat/dist/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules/hardhat/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules/hardhat/dist/src/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules/hardhat/dist/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules/hardhat/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/hardhat@3.0.15_bufferutil@4.0.9_utf-8-validate@5.0.10/node_modules:/Users/shunger/Projects/web3/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../hardhat/dist/src/cli.js" "$@"
else
  exec node  "$basedir/../hardhat/dist/src/cli.js" "$@"
fi
